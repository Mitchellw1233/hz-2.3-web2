{
  "routes": {
    "api.post.list": {
      "path": "/api/posts",
      "controller": "App\\Controller\\BlogApiController::list"
    },
    "api.post.show": {
      "path": "/api/posts/{id}",
      "controller": "App\\Controller\\BlogApiController::show",
      "methods": [
        "GET",
        "HEAD"
      ]
    },
    "api.post.edit": {
      "path": "/api/posts/{id}/edit",
      "controller": "App\\Controller\\BlogApiController::edit",
      "methods": [
        "GET",
        "PUT"
      ]
    }
  }
}